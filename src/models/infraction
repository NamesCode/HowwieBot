const { Sequelize } = require('sequelize'); // Import the Sequelize constructor
const sequelize = require('../utils/database'); // Import your Sequelize instance from database.js

const Infraction = sequelize.define('infraction', {
    id: {
        type: Sequelize.INTEGER, 
        primaryKey: true,
        autoIncrement: true,
    },
    guildId: {
        type: Sequelize.STRING, 
        allowNull: false,
    },
    reason: {
        type: Sequelize.STRING, 
        allowNull: true,
        defaultValue: 'No reason provided'
    },
    enforcerId: {
        type: Sequelize.STRING, 
        allowNull: false,
    },
    type: {
        type: Sequelize.STRING, 
        allowNull: false,
    },
    duration: {
        type: Sequelize.INTEGER, 
        allowNull: false,
        defaultValue: 0
    },
    // memberId from Member.hasMany relationship
});

module.exports = Infraction;
